{
  "description": "Minimizes project setup and maintenance complexity, so you can focus on writing code.",
  "keywords": [
    "test",
    "automation",
    "best practises",
    "guide",
    "npm",
    "helper",
    "setup",
    "ci"
  ],
  "devDependencies": {
    "@babel/cli": "7.16.8",
    "@babel/core": "7.16.7",
    "@babel/eslint-parser": "7.16.5",
    "@babel/register": "7.16.8",
    "@blackflux/eslint-plugin-rules": "2.0.4",
    "@blackflux/robo-config-plugin": "5.3.21",
    "babel-plugin-istanbul": "6.1.1",
    "babel-preset-latest-node": "5.5.1",
    "chai": "4.3.4",
    "coveralls": "3.1.1",
    "eslint": "8.6.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-json": "3.1.0",
    "eslint-plugin-markdown": "2.2.1",
    "eslint-plugin-mocha": "9.0.0",
    "node-tdd": "3.3.1",
    "nyc": "15.1.0",
    "smart-fs": "2.0.3"
  },
  "engines": {
    "node": ">= 12"
  },
  "files": [
    "lib"
  ],
  "nyc": {
    "exclude": [
      "gardener.js",
      "node_modules/*",
      "coverage/*",
      "lib/*"
    ],
    "tempDir": "./coverage/.nyc_output",
    "report-dir": "./coverage",
    "check-coverage": true,
    "per-file": false,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "require": [
      "@babel/register"
    ],
    "extension": [],
    "cache": true,
    "all": true,
    "babel": true,
    "sourceMap": false,
    "instrument": false
  },
  "name": "js-gardener",
  "version": "0.0.0-development",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rm -rf lib",
    "build": "npx babel src --out-dir lib --copy-files --include-dotfiles --config-file ./.babelrc",
    "build-clean": "yarn run clean && yarn run build",
    "test-simple": "nyc mocha \"./test/**/*.spec.js\"",
    "test": "yarn run clean && yarn run gardener && yarn run test-simple",
    "coveralls": "node ./node_modules/coveralls/bin/coveralls.js < ./coverage/lcov.info",
    "semantic-release": "yarn run build-clean && npx semantic-release",
    "gardener": "node gardener",
    "docker": "docker run --net host -u`id -u`:`id -g` -v $(pwd):/user/project -v ~/.aws:/user/.aws -v ~/.npmrc:/user/.npmrc -w /user/project -it --entrypoint /bin/bash",
    "t": "yarn test",
    "ts": "yarn run test-simple",
    "tsv": "yarn run test-simple --verbose",
    "u": "yarn upgrade --latest --force",
    "i": "yarn install --frozen-lockfile",
    "it": "yarn run i && yarn run t"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/blackflux/js-gardener.git"
  },
  "author": "Lukas Siemon",
  "license": "MIT",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/blackflux/js-gardener/blob/master/LICENSE"
    }
  ],
  "bugs": {
    "url": "https://github.com/blackflux/js-gardener/issues"
  },
  "homepage": "https://github.com/blackflux/js-gardener#readme",
  "dependencies": {
    "chalk": "4.1.2",
    "fancy-log": "2.0.0",
    "glob": "7.2.0",
    "joi-strict": "2.0.1",
    "js-yaml": "4.1.0",
    "lodash.difference": "4.5.0",
    "mocha": "9.1.3",
    "npm-check": "5.9.2",
    "robo-config": "4.0.5"
  },
  "peerDependencies": {
    "eslint": "^6.2.0 || ^7.0.0"
  }
}
